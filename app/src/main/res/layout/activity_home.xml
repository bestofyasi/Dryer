<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:onClick="ironingButton"
    android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/IroningID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/DefectID"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@color/colorWhite"
        android:maxWidth="150dp"
        android:onClick="IroningButton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/iron" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WrinkleID"
        android:src="@mipmap/wd"
        android:onClick="WrinkleButton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:layout_alignTop="@+id/IroningID"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView5"
        android:background="@color/colorWhite"/>

    <ImageButton
        android:id="@+id/DefectID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="@color/colorWhite"
        android:maxWidth="150dp"
        android:nestedScrollingEnabled="false"
        android:onClick="DefectButton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/hb" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NotificationID"
        android:layout_alignTop="@+id/DefectID"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/bell"
        android:onClick="NotificationButton"
        android:maxWidth="150dp"
        android:nestedScrollingEnabled="false"
        android:padding="20dp"
        android:baselineAlignBottom="true"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/DefectID"
        android:layout_alignStart="@+id/WrinkleID"
        android:background="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ironing"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wrinkle Detection"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_above="@+id/imageButton2"
        android:layout_alignEnd="@+id/WrinkleID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Defect Detection"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/NotificationID"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/NotificationID"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@mipmap/cloth"
        android:maxWidth="150dp"
        android:padding="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_above="@+id/DefectID"
        android:layout_alignEnd="@+id/textView4"
        android:background="@color/colorWhite"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@mipmap/spry"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:maxWidth="150dp"
        android:layout_alignStart="@+id/NotificationID"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton"
        android:background="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cloth Detection"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_above="@+id/DefectID"
        android:layout_alignEnd="@+id/DefectID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Perfume"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/NotificationID"
        android:layout_alignStart="@+id/NotificationID" />

</RelativeLayout>
